        }

        .container {
            max-width: 960px;
            margin: 0 auto;
            padding: 20px;
        }

        header {
            text-align: center;
            background-color: #4CAF50;
            color: white;
            padding: 10px;
        }

        nav ul {
            background-color: #333;
            overflow: hidden;
            text-align: center;
            padding: 0;
            margin: 0;
        }

